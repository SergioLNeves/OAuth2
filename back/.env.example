# ============================================================================
# Environment
# ============================================================================
ENV=development

# ============================================================================
# OAuth 2.0 / OIDC Configuration
# ============================================================================
OAUTH_AUTH_CODE_EXPIRATION=10m
OAUTH_ACCESS_TOKEN_EXPIRATION=1h
OAUTH_REFRESH_TOKEN_EXPIRATION=168h
OAUTH_ID_TOKEN_EXPIRATION=1h
OAUTH_ISSUER=http://localhost:8080

# ============================================================================
# Session Configuration
# ============================================================================
# Este secret é usado para:
# 1. Assinar cookies de sessão (login page)
# 2. Assinar JWTs (access_token, id_token)
# IMPORTANTE: Gere um novo secret em produção usando: openssl rand -base64 32
SESSION_SECRET=your-secret-key-here-generate-with-openssl
SESSION_DURATION=168h
SESSION_TOKEN_SIZE=32

# ============================================================================
# Database Configuration (SQLite)
# ============================================================================
AUTH_DB_PATH=./data/auth.db
DATABASE_MAX_CONN=10
DATABASE_MAX_IDLE=5
DATABASE_MAX_LIFE_TIME=300s

# Database timeouts
DATABASE_TIMEOUT_READ=2s
DATABASE_TIMEOUT_WRITE=3s
DATABASE_TIMEOUT_UPDATE=3s
DATABASE_TIMEOUT_DELETE=2s
DATABASE_TIMEOUT_COUNT=5s

# ============================================================================
# Server URLs
# ============================================================================
# Para desenvolvimento local (sem Docker)
API_BASE_URL=http://localhost:8080
APP_BASE_URL=http://localhost:5173

# Para desenvolvimento com Docker, use:
# API_BASE_URL=http://backend:8080
# APP_BASE_URL=http://frontend:3000

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,Cookie

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# ============================================================================
# Timezone
# ============================================================================
TIME_TIMEZONE=America/Sao_Paulo
